<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pagecolor"
    tools:context=".CurrencyWallet.SummaryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0.1dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#111"
                            android:fontFamily="serif-monospace"
                            android:text="@string/avlbal"/>
                        <TextView
                            android:padding="8dp"
                            android:fontFamily="serif-monospace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/S_amt"
                            android:text=""
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0.1dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textx"
                            android:textColor="#111"
                            android:fontFamily="serif-monospace"
                            android:textAlignment="center"
                            android:text="@string/ledbal"/>

                        <TextView
                            android:padding="8dp"
                            android:fontFamily="serif-monospace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/s_legamt"
                            android:text=""
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#111"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/in"
                                android:layout_margin="5dp"
                                android:textStyle="bold"
                                android:textSize="15dp"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>

                        <TableRow>

                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace"
                                android:textColor="#111"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:text="@string/pmi"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/pmincome"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:fontFamily="serif-monospace"
                                android:textSize="16dp"
                                android:textAlignment="textEnd"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace"
                                android:textColor="#111"
                                android:textSize="15dp"
                                android:layout_weight="1"
                                android:text="@string/dincome"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:textAlignment="textEnd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="2dp"
                                android:textSize="16dp"
                                android:id="@+id/dincome"
                                android:fontFamily="serif-monospace"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>

                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="serif-monospace"
                                android:textColor="#111"
                                android:layout_weight="1"
                                android:textAlignment="textStart"
                                android:textSize="15dp"
                                android:layout_height="wrap_content"
                                android:text="@string/royalincome"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:textAlignment="textEnd"
                                android:fontFamily="serif-monospace"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rincome"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                    </TableLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/out"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:textStyle="bold"
                                android:textSize="15dp"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>

                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif-monospace"
                                android:textColor="#111"
                                android:layout_weight="1"
                                android:text="@string/TDS"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:fontFamily="serif-monospace"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:textSize="16dp"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:id="@+id/tds"
                                android:layout_weight="1"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>
                            <TextView
                                android:fontFamily="serif-monospace"
                                android:textColor="#111"
                                android:layout_width="match_parent"
                                android:textSize="15dp"
                                android:layout_weight="1"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                android:text="@string/deduction"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:fontFamily="serif-monospace"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:textAlignment="textEnd"
                                android:layout_marginLeft="2dp"
                                android:textSize="16dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/deduction"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow>
                            <TextView
                                android:fontFamily="serif-monospace"
                                android:textColor="#111"
                                android:layout_width="match_parent"
                                android:textSize="15dp"
                                android:layout_weight="1"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                android:text="@string/withdrawal"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:textAlignment="textEnd"
                                android:fontFamily="serif-monospace"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:layout_marginLeft="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/withdrawal"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                        <TableRow
                            >
                            <TextView
                                android:textColor="#111"
                                android:fontFamily="serif-monospace"
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_weight="1"
                                android:text="@string/acharge"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                            <TextView
                                android:fontFamily="serif-monospace"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/admincharge"
                                android:textAlignment="textEnd"
                                android:layout_weight="1"
                                android:layout_marginLeft="2dp"
                                android:textSize="16dp"
                                android:text=""/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#111"/>
                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111"/>
                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryprogress"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>