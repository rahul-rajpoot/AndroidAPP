<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="5dp"
    android:id="@+id/purchaselisrll">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/snopl"
            android:textAlignment="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Order No."
            android:id="@+id/ordernoplrc"
            android:textAlignment="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Order Date."
            android:id="@+id/orderdateplrc"
            android:textAlignment="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:id="@+id/invnoplrc"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="INV No."
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:id="@+id/invdateplrc"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="INV Date"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:paddingRight="5dp"
            android:id="@+id/totalamountplrc"
            android:textAlignment="textEnd" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Qty."
            android:paddingRight="5dp"
            android:id="@+id/qtyplrc"
            android:textAlignment="textEnd"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="BV"
            android:paddingRight="5dp"
            android:textAlignment="textEnd"
            android:id="@+id/bvplrc" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="BV"
            android:paddingRight="5dp"
            android:textAlignment="textEnd"
            android:id="@+id/pvplrc" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAlignment="center"
            android:id="@+id/statusplrc"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/linecolor"/>
</androidx.cardview.widget.CardView>