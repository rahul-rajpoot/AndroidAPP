<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_white_box_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:gravity="center">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/no_image"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="Category"
                                android:textColor="@color/coming_text_clr"
                                android:textSize="17sp"></TextView>

                            <TextView
                                android:id="@+id/category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center|left"
                                android:text="..."
                                android:textColor="@color/colorBlack"
                                android:textSize="17sp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|left"
                            android:text="Product"
                            android:textColor="@color/coming_text_clr"
                            android:textSize="17dp">

                        </TextView>

                        <TextView
                            android:id="@+id/product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center|left"
                            android:text="..."
                            android:textColor="@color/colorBlack"
                            android:textSize="17dp"></TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_weight=".005"
                    android:background="@color/gray_light"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="MRP"
                                android:textColor="@color/coming_text_clr"
                                android:textSize="18sp"></TextView>

                            <TextView
                                android:id="@+id/mrp"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="..."
                                android:textColor="@color/colorblack"
                                android:textSize="17sp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="DP"
                                android:textColor="@color/coming_text_clr"
                                android:textSize="17dp">

                            </TextView>

                            <TextView
                                android:id="@+id/dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="..."
                                android:textColor="@color/colorblack"
                                android:textSize="17dp"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_weight=".005"
                    android:background="@color/gray_light"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="Weight"
                                android:textColor="@color/coming_text_clr"
                                android:textSize="18sp"></TextView>

                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="..."
                                android:textColor="@color/colorblack"
                                android:textSize="17sp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center|left"
                                android:text="Quantity"
                                android:textColor="@color/coming_text_clr"
                                android:textSize="17dp">

                            </TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginRight="40dp"
                                android:layout_weight=".5"
                                android:background="@drawable/rectangle_yellow_box_layout"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <Spinner
                                        android:id="@+id/quantity_spinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:visibility="visible" />

                                </RelativeLayout>

                            </LinearLayout>
                            <!--                    <TextView-->
                            <!--                        android:id="@+id/quantity"-->
                            <!--                        android:layout_width="match_parent"-->
                            <!--                        android:layout_weight=".5"-->
                            <!--                        android:layout_gravity="center|left"-->
                            <!--                        android:gravity="center|left"-->
                            <!--                        android:layout_height="0dp"-->
                            <!--                        android:textColor="@color/colorblack"-->
                            <!--                        android:textSize="17dp"-->
                            <!--                        android:fontFamily="@font/poppins_medium"-->
                            <!--                        android:text="..."-->
                            <!--                        >-->
                            <!--                    </TextView>-->
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center|right"
        android:gravity="center|right">

        <ImageView
            android:id="@+id/cancel_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:background="@color/white"
            android:src="@drawable/cross"
            app:tint="@color/red_round_btn_color"></ImageView>
    </LinearLayout>


</RelativeLayout>